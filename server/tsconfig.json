  "compilerOptions": {
    "target": "es2016",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "paths": {
      "@shared/*": ["../shared-lib/src/*"]
    }
  }
}
